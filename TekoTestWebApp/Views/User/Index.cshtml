@model IEnumerable<User>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<h1>Все сотрудники</h1>
<br />
<br />
<h3>Перейдя в детали об определенном сотруднике - можно узнать:</h3>
<ul>
    <li>Имя пользователя</li>
    <li>Возвраст</li>
    <li>Должность</li>
    <li>Пол</li>
</ul>
<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            @foreach(var item in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <div class="card-body">
                            <h4 class="card-text">@item.Username</h4>
                            <h6 class="card-text">ФИО: @item.FullName</h6>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                   <a type="btn btn-success" asp-controller="User" asp-action="Detail" asp-route-id="@item.Id"
                                     class="btn btn-sm btn-outline-secondary">Показать</a>
                                    <a type="button" asp-controller="User" asp-action="Edit" asp-route-id="@item.Id"
                                      class="btn btn-sm btn-outline-secondary">Изменить</a>
                                    <a type="button" asp-controller="User" asp-action="Delete" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-secondary">Удалить</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>